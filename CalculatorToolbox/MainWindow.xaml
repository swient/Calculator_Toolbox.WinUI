<Window
    x:Class="CalculatorToolbox.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:CalculatorToolbox"
    mc:Ignorable="d"
    Title="計算機">

    <Grid>
        <!-- CalculatorView 顯示 -->
        <local:CalculatorView x:Name="CalculatorViewHost"
                      Visibility="Visible"
                      Margin="0,0,0,0"/>

        <!-- 左側選單面板 -->
        <Grid x:Name="MenuPanel"
              Width="349"
              Background="WhiteSmoke"
              Visibility="Collapsed"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Left"
              BorderBrush="LightGray"
              BorderThickness="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <StackPanel VerticalAlignment="Top" Margin="0">
                <Button x:Name="BtnCalculator"
                        Content="計算機"
                        FontFamily="Microsoft JhengHei UI"
                        FontSize="16"
                        HorizontalContentAlignment="Left"
                        Padding="20,0,0,0"
                        Margin="0,70,0,0"
                        Height="64"
                        Background="#FFF0F0F0"
                        Click="BtnCalculator_Click"/>
                <Button x:Name="BtnCurrencyConverter"
                        Content="匯率轉換"
                        FontFamily="Microsoft JhengHei UI"
                        FontSize="16"
                        HorizontalContentAlignment="Left"
                        Padding="20,0,0,0"
                        Margin="0,10,0,0"
                        Height="64"
                        IsEnabled="False"
                        Click="BtnCurrencyConverter_Click"/>
                <Button x:Name="BtnUnitConverter"
                        Content="單位換算"
                        FontFamily="Microsoft JhengHei UI"
                        FontSize="16"
                        HorizontalContentAlignment="Left"
                        Padding="20,0,0,0"
                        Margin="0,10,0,0"
                        Height="64"
                        IsEnabled="False"
                        Click="BtnUnitConverter_Click"/>
            </StackPanel>
        </Grid>

        <!-- 主選單按鈕 -->
        <Button x:Name="BtnMenu"
                Content="☰"
                FontSize="24"
                Width="59"
                Height="55"
                Background="WhiteSmoke"
                BorderThickness="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                Click="BtnMenu_Click"/>
    </Grid>
</Window>
