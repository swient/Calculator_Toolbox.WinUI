<Window
    x:Class="CalculatorToolbox.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="using:CalculatorToolbox"
    xmlns:conv="using:CalculatorToolbox.Converters"
    mc:Ignorable="d">
    <Grid>
        <Grid.Resources>
            <conv:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <conv:PageToVisibilityConverter x:Key="PageToVisibilityConverter"/>
        </Grid.Resources>
        <!-- CalculatorView 顯示 -->
        <local:CalculatorView x:Name="CalculatorViewHost"
                              Visibility="{Binding CurrentPage, Converter={StaticResource PageToVisibilityConverter}, ConverterParameter=Calculator}"
                              Margin="0"/>
        <!-- 左側選單面板 -->
        <Grid x:Name="MenuPanel"
              Width="349"
              Background="WhiteSmoke"
              Visibility="{Binding IsMenuVisible, Converter={StaticResource BoolToVisibilityConverter}}"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Left">
            <StackPanel>
                <Border Height="70" Background="Transparent"/>
                <Button Content="計算機"
                        FontFamily="Microsoft JhengHei UI"
                        FontSize="16"
                        Background="{Binding CalculatorBtnBg}"
                        HorizontalAlignment="Stretch"
                        Margin="2"
                        Height="64"
                        Command="{Binding ShowCalculatorCommand}"/>
                <Button Content="匯率轉換"
                        FontFamily="Microsoft JhengHei UI"
                        FontSize="16"
                        Background="{Binding CurrencyBtnBg}"
                        HorizontalAlignment="Stretch"
                        Margin="2"
                        Height="64"
                        IsEnabled="False"
                        Command="{Binding ShowCurrencyCommand}"/>
                <Button Content="單位換算"
                        FontFamily="Microsoft JhengHei UI"
                        FontSize="16"
                        Background="{Binding UnitBtnBg}"
                        HorizontalAlignment="Stretch"
                        Margin="2"
                        Height="64"
                        IsEnabled="False"
                        Command="{Binding ShowUnitCommand}"/>
            </StackPanel>
        </Grid>
        <!-- 主選單按鈕 -->
        <Button Content="☰"
                FontSize="24"
                Width="59"
                Height="55"
                Background="WhiteSmoke"
                BorderThickness="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                Command="{Binding ToggleMenuCommand}"/>
    </Grid>
</Window>
